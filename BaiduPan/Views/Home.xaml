<UserControl x:Class="BaiduPan.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BaiduPan.Views"
             xmlns:controls="clr-namespace:BaiduPan.Controls"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:res="clr-namespace:BaiduPan.Assets"
             xmlns:indicator="clr-namespace:Popcorn.Spinner;assembly=Popcorn.Spinner"
             mc:Ignorable="d" 
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="300" d:DesignWidth="300">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>


        <Style x:Key="ProgressTxtStyle" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Visibility" Value="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Style>

        <DataTemplate x:Key="FileDataTemplate">
            <Border Padding="0 10 4 10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Style="{StaticResource FileImageSelectorStyle}"/>
                    <Grid Grid.Column="2" Margin="5, 0, 0, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>                        
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding FilePath.FileName}"  FontSize="16"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <TextBlock Text="修改时间:"/>
                            <TextBlock  Foreground="Gray" Padding="8 0 8 0"
                                           Text="{Binding ModifiedTime}" />
                            <TextBlock Text="大小:"/>
                            <TextBlock Foreground="Gray" Padding="8 0 8 0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding FileSizeShow}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding FileType}" Value="FolderType">
                                                <Setter Property="Text" Value="-"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="4" x:Name="ToolGrid" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition />
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <mui:ModernButton Grid.Column="0" IconWidth="13" IconHeight="13"
                                                  IconData="F1 M 32.4113,38C 32.4113,38.1309 32.3817,38.2533 32.3742,38.3843L 45.9897,45.1862C 47.1549,44.2024 48.6467,43.586 50.2943,43.586C 53.9978,43.586 57,46.588 57,50.2909C 57,53.998 53.9978,57 50.2943,57C 46.5871,57 43.5887,53.998 43.5887,50.2909C 43.5887,50.1558 43.6183,50.0376 43.6258,49.9067L 30.0103,43.1047C 28.8414,44.0843 27.3533,44.7007 25.7056,44.7007C 22.0021,44.7007 19,41.7029 19,38C 19,34.2929 22.0021,31.2909 25.7056,31.2909C 27.3533,31.2909 28.8414,31.9116 30.0103,32.8954L 43.6258,26.0891C 43.6183,25.9582 43.5887,25.8358 43.5887,25.7007C 43.5887,22.002 46.5871,19 50.2943,19C 53.9978,19 57,22.002 57,25.7007C 57,29.4078 53.9978,32.4098 50.2943,32.4098C 48.6429,32.4098 47.1549,31.7934 45.9897,30.8053L 32.3742,37.6158C 32.3817,37.7425 32.4113,37.8649 32.4113,38 Z "
                                                  Command="{Binding ShareFileCommand}"/>
                        <!--<mui:ModernButton Grid.Column="2" IconWidth="14" IconHeight="14" IconData="F1 M 25,52L 51,52L 51,57L 25,57L 25,52 Z M 35,16L 41,16L 41,36.5L 49,27L 49,36.5L 38,49L 27,36.5L 27,27L 35,36.5L 35,16 Z "
                                                  Command="{Binding DownloadFileCommand}"/>-->
                        <controls:AsyncButton Grid.Column="2" IconWidth="14" IconHeight="14" IconData="F1 M 25,52L 51,52L 51,57L 25,57L 25,52 Z M 35,16L 41,16L 41,36.5L 49,27L 49,36.5L 38,49L 27,36.5L 27,27L 35,36.5L 35,16 Z "
                                                     IsWorking="{Binding IsDownloading}" ProgressRingHeight="27" ProgressRingWidth="27" ProgressBarStyle="{StaticResource PulseProgressRingStyle}"
                                                     Command="{Binding DownloadCmd}"/>
                        <TextBlock Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"
                                   Text="{Binding DownloadPercentage, StringFormat={}{0}%}"
                                   Style="{StaticResource ProgressTxtStyle}"/>


                        <mui:ModernButton Grid.Column="4" IconWidth="15" IconHeight="15" IconData="F1 M 25.3333,23.75L 50.6667,23.75C 51.5411,23.75 51.8541,27.3125 51.8541,27.3125L 24.1458,27.3125C 24.1458,27.3125 24.4589,23.75 25.3333,23.75 Z M 35.625,19.7917L 40.375,19.7917C 40.8122,19.7917 41.9583,20.9378 41.9583,21.375C 41.9583,21.8122 40.8122,22.9584 40.375,22.9584L 35.625,22.9584C 35.1878,22.9584 34.0416,21.8122 34.0416,21.375C 34.0416,20.9378 35.1878,19.7917 35.625,19.7917 Z M 27.7083,28.5L 48.2916,28.5C 49.1661,28.5 49.875,29.2089 49.875,30.0834L 48.2916,53.8334C 48.2916,54.7078 47.5828,55.4167 46.7083,55.4167L 29.2917,55.4167C 28.4172,55.4167 27.7083,54.7078 27.7083,53.8334L 26.125,30.0834C 26.125,29.2089 26.8339,28.5 27.7083,28.5 Z M 30.0833,31.6667L 30.4792,52.25L 33.25,52.25L 32.8542,31.6667L 30.0833,31.6667 Z M 36.4167,31.6667L 36.4167,52.25L 39.5833,52.25L 39.5833,31.6667L 36.4167,31.6667 Z M 43.1458,31.6667L 42.75,52.25L 45.5208,52.25L 45.9167,31.6667L 43.1458,31.6667 Z "
                                                  Command="{Binding DeleteCmd}"/>
                    </Grid>
                </Grid>
            </Border>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}"
                             Value="True">
                    <Setter TargetName="ToolGrid" Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </DataTemplate.Triggers>
            
            
        </DataTemplate>
        
    </UserControl.Resources>
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height=" 20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>           
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <mui:ModernButton IconWidth="14" IconHeight="14"
                                  IconData="F1 M 34,57L 42,57L 42,32.25L 52,42.25L 52,31.75L 38,17.75L 24,31.75L 24,42.25L 34,32.25L 34,57 Z"
                                  Command="{Binding ReturnFolderCmd}"/>
                
                <controls:AsyncButton Grid.Column="2" IconWidth="16" IconHeight="16"
                                      IconData="F1 M 38,20.5833C 42.9908,20.5833 47.4912,22.6825 50.6667,26.046L 50.6667,17.4167L 55.4166,22.1667L 55.4167,34.8333L 42.75,34.8333L 38,30.0833L 46.8512,30.0833C 44.6768,27.6539 41.517,26.125 38,26.125C 31.9785,26.125 27.0037,30.6068 26.2296,36.4167L 20.6543,36.4167C 21.4543,27.5397 28.9148,20.5833 38,20.5833 Z M 38,49.875C 44.0215,49.875 48.9963,45.3932 49.7703,39.5833L 55.3457,39.5833C 54.5457,48.4603 47.0852,55.4167 38,55.4167C 33.0092,55.4167 28.5088,53.3175 25.3333,49.954L 25.3333,58.5833L 20.5833,53.8333L 20.5833,41.1667L 33.25,41.1667L 38,45.9167L 29.1487,45.9167C 31.3231,48.3461 34.483,49.875 38,49.875 Z"
                                      Command="{Binding RefreshFileCmd}" IsWorking="{Binding IsRefreshing}"/>
            </Grid>

            <TextBox Grid.Column="2" IsReadOnly="True" 
                     Text="{Binding CurrentFile.FilePath, Mode=OneWay}" 
                     Foreground="Gray"/>

            <mui:ModernButton Grid.Column="4"
                              IconHeight="14" IconWidth="14" 
                              Content="{x:Static res:UiStringResources.HomePage_download}"
                              IconData="F1 M 25,52L 51,52L 51,57L 25,57L 25,52 Z M 35,16L 41,16L 41,36.5L 49,27L 49,36.5L 38,49L 27,36.5L 27,27L 35,36.5L 35,16 Z "
                              Command="{Binding  BatchDownloadFileCmd}"
                              CommandParameter="{Binding Path=SelectedItems,ElementName=FileListBox}"/>

            <mui:ModernButton Grid.Column="6"
                              IconHeight="14" IconWidth="14" 
                              Content="{x:Static res:UiStringResources.HomePage_delete}"
                              IconData="F1 M 25.3333,23.75L 50.6667,23.75C 51.5411,23.75 51.8541,27.3125 51.8541,27.3125L 24.1458,27.3125C 24.1458,27.3125 24.4589,23.75 25.3333,23.75 Z M 35.625,19.7917L 40.375,19.7917C 40.8122,19.7917 41.9583,20.9378 41.9583,21.375C 41.9583,21.8122 40.8122,22.9584 40.375,22.9584L 35.625,22.9584C 35.1878,22.9584 34.0416,21.8122 34.0416,21.375C 34.0416,20.9378 35.1878,19.7917 35.625,19.7917 Z M 27.7083,28.5L 48.2916,28.5C 49.1661,28.5 49.875,29.2089 49.875,30.0834L 48.2916,53.8334C 48.2916,54.7078 47.5828,55.4167 46.7083,55.4167L 29.2917,55.4167C 28.4172,55.4167 27.7083,54.7078 27.7083,53.8334L 26.125,30.0834C 26.125,29.2089 26.8339,28.5 27.7083,28.5 Z M 30.0833,31.6667L 30.4792,52.25L 33.25,52.25L 32.8542,31.6667L 30.0833,31.6667 Z M 36.4167,31.6667L 36.4167,52.25L 39.5833,52.25L 39.5833,31.6667L 36.4167,31.6667 Z M 43.1458,31.6667L 42.75,52.25L 45.5208,52.25L 45.9167,31.6667L 43.1458,31.6667 Z "              
                              Command="{Binding}"
                              CommandParameter="{Binding}"/>

        </Grid>
        
        <ListBox Grid.Row="2" x:Name="FileListBox"
                 ItemsSource="{Binding ChildrenFile}"
                 Margin="0, 0, 0, 16" 
                 SelectionMode="Extended"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ItemContainerStyle="{StaticResource SelectedBackgroundStyle}"
                 ItemTemplate="{StaticResource FileDataTemplate}"
                 HorizontalAlignment="Stretch">
            
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding EnterFolderCmd}"
                                           CommandParameter="{Binding Path=SelectedItem, ElementName=FileListBox}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            
            
        </ListBox>


        <!--<indicator:LoadingIndicator Grid.RowSpan="3" 
                                    Style="{DynamicResource LoadingIndicatorArcsStyle}"
                                    Foreground="DeepSkyBlue"
                                    HorizontalAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Visibility="Collapsed">
            <indicator:LoadingIndicator.RenderTransform>
                <ScaleTransform ScaleX="2" ScaleY="2"/>
            </indicator:LoadingIndicator.RenderTransform>
        </indicator:LoadingIndicator>-->

    </Grid>
</UserControl>
